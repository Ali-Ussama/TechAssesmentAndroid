<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SlideAndroidDevChallenge" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Base application theme with no actionBar -->
    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:scrollbarSize">0dp</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="bottomSheetDialogTheme">@style/Theme.CustomBottomSheet</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="Widget.Text.H1.Primary" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.Text.H2.Primary" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/edit_text_background</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintEnabled">true</item>
        <item name="hintTextColor">@color/MidGrey</item>
        <item name="android:maxLines">1</item>
        <item name="cornerRadius">4dp</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="Widget.TextInputEditText" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/DarkGrey</item>
        <item name="android:textColorHint">@color/LightGrey</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="errorIconDrawable">@null</item>
    </style>


    <style name="Theme.CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:backgroundDimAmount">.8</item>
        <item name="bottomSheetStyle">@style/Theme.CustomBottomSheet</item>
    </style>

    <style name="Theme.CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/Theme.CustomShapeAppearanceBottomSheetDialog
        </item>
    </style>

    <style name="Theme.CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="Widget.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="elevation">0dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:backgroundTint">@color/purple_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="maxLines">1</item>
        <item name="autoSizeMinTextSize">11sp</item>
        <item name="autoSizeMaxTextSize">24sp</item>
        <item name="cornerRadius">4dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

</resources>